<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.PDFImagePreviewController">
    <ImageView fx:id="pdfImageView" fitWidth="800" preserveRatio="true" />
    <HBox alignment="CENTER" spacing="10" padding="10">
        <Button text="Previous" onAction="#handlePreviousPage"/>
        <Button text="Next" onAction="#handleNextPage"/>
        <Button text="Print" onAction="#handlePrint"/>
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>